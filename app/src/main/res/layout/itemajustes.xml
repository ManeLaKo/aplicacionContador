<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/texto_ajuste"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#22005d">

    <ImageView
        android:id="@+id/imagen_icono"
        android:layout_width="117dp"
        android:layout_height="106dp"
        android:adjustViewBounds="false"
        android:scaleType="center"
        tools:srcCompat="@drawable/def_icono_musica" />

    <Space
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textview_ajuste"
        android:layout_width="223dp"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#80f8d2"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/imageButton_ajuste_verificado"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:background="#22005d"
        android:scaleType="center"
        android:src="@android:drawable/btn_star_big_off" />

</LinearLayout>